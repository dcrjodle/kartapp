# Environment Variables for Swedish Statistics Visualization Platform

# Development/Production Mode
NODE_ENV=development

# Server Configuration
PORT=10000

# API Configuration
REACT_APP_API_URL=http://localhost:3001

# SCB API Configuration
SCB_API_BASE_URL=https://api.scb.se/OV0104/v1/doris
SCB_API_TIMEOUT=30000
SCB_API_MAX_RETRIES=3

# Google Generative AI (for future LLM features)
REACT_APP_GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Development Settings
WEBPACK_DEV_SERVER_PORT=3001
WEBPACK_DEV_SERVER_HOST=localhost

# Production Settings
SERVE_STATIC=true
COMPRESSION=true

# Logging
LOG_LEVEL=info

# CORS Settings (for production API if needed)
CORS_ORIGIN=http://localhost:10000,https://yourdomain.com